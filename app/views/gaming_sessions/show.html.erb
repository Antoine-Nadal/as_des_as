<div class="container">

  <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% @gaming_session.photos.each_with_index do |photo, index| %>
          <div class="carousel-item <%="active" if index == 0 %>" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path photo.key, height: 300, width: 400, crop: :fill %>'); height: 200px;"></div>
        <% end %>
    </div>
  </div>

  <div class="row">

    <div class="col-6">
      <div class="card-creation-title">
        <h1 class= "t2"> <%= @gaming_session.name.capitalize %> </h1>
        <br>
        <h3>Description :</h3>
        <p> <%= @gaming_session.description %> </p>
        <p>Food: <%= @gaming_session.food %></p>
        <p>Drink: <%= @gaming_session.drink %></p>
         <p> Type de jeu : <%= @gaming_session.game_type %> </p>
        <% if policy(@gaming_session).edit? %>
          <p><%= link_to "updater votre bar à jeu", edit_gaming_session_path(@gaming_session), class: "button-orange" %></p>
        <% end %>
          <%= button_to "délister le bar à jeu", @gaming_session, class: "button-orange", method: :delete if policy(@gaming_session).destroy? %>
      </div>

    </div>
    <div class="col-6">
        <% unless @gaming_session.user == current_user %>
          <div class="forming">
            <%= render "shared/form_booking" %>
          </div>
        <% end %>
    </div>

</div>

