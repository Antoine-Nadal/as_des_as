<div class="container mt-3" data-controller="price">
  <h1>Réservez un bar à jeu:</h1>
  <div class="row">
    <div class="col-6 d-flex">
      Par jour :<p data-price-target="unitPrice"> <%= price %></p> €
    </div>
    <div class="col-6 d-flex">
      Total :<p data-price-target="price"> <%= price %></p> €
    </div>
  </div>
  <div>
    <%= simple_form_for [@gaming_session, @booking] do |f| %>
      <%# Prénom: <%= @gaming_session.user.first_name %>
      <%# Nom: <%= @gaming_session.user.last_name %>
      <div class="input" data-action="change->price#displayPrice">
        <%= f.input :start_date, as: :string, :input_html => {class: 'response-project', data: { target: "price.startDate" }}%>
        <%= f.input :end_date, as: :string, :input_html => {class: 'response-project', data: { target: "price.endDate" }}%>
      </div>
      <div class="submit">
        <%= f.button :submit, 'réserver', class: "button-orange" %>
      </div>
    <% end %>
  </div>
</div>
